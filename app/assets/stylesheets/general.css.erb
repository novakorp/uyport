BODY {
	margin: 0px ;  
	background-image: url(<%= asset_path 'back_disenio_gral_2.gif' %>) ; 
	background-repeat: repeat;
}

BODY , INPUT, A {font-family: Tahoma ; font-size: 9pt}

A, A:Visited { text-decoration: none; color: #24AF2E; font-weight:bold}

A:Hover {color: #63F265}

h1 {margin:0px 0px 20px 0px; font-size: 14pt}
h2 {margin:0px 0px 10px 0px; font-size: 10pt; color: #4C4C4C}

.tabla_principal {width: 780px; height:700px;}
.tabla_principal_encabezado {
	background-image: url(<%= asset_path 'banner_disenio_gral.jpg' %>) ;
	background-repeat: no-repeat;
	background-color: #24AF2E;
	height: 86px;
	padding-left: 120px;
}

.tabla_principal_borde_encabezado {
	border-width: 0;
	border-style: solid;
	border-color: #1F9625;
	height: 0px; 
}

.tabla_principal_contenido {
	border: 10px solid #24AF2E;
	padding: 15px; 
	vertical-align: top; 
	background-color: #FEFEFE;
	background-image: url(<%= asset_path 'fondo_contenido_disenio_gral.jpg' %>) ;
	background-repeat: no-repeat;
	background-position: right top;
	} 
	
.titulo_sistema {
	color: white;
	font-size: 16pt;
	font-weight: bold;
}

.tabla_mantenimiento TH {
	padding: 8px 4px 2px 4px;
}

.tabla_mantenimiento TD {
	padding: 2px 4px 2px 4px;
	vertical-align: top;
	text-align: center;
}

.tabla_mantenimiento TD {
	padding: 2px 4px 2px 4px;
	
}

.links_autenticacion {
	padding: 2px 15px 2px 4px;
	text-align: right;
	
	color: #F7F7F7;
	font-weight: normal;
	font-size: 8pt;
	font-family: Arial;
	
}

.links_autenticacion A 
{	
	color: white;
	
	font-weight: normal;
	font-size: 8pt;
	font-family: Arial;
}



