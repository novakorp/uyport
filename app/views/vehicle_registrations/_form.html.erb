  
<%= form_for ([@vehicle, @vehicle_registration])  do |v| %>
 <% if @vehicle_registration.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@vehicle_registration.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @vehicle_registration.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
   
  <th>Chasis:</th>  
	<td> <%=  v.text_field :chassis %> </td>
  </tr>
  
  <th>Motor:</th>  
	<td> <%=  v.text_field :engine %> </td>
  </tr>
  
  
  <th>Identificación DNT:</th>  
	<td> <%=  v.text_field :dnt_id %> </td>
  </tr> 
  
  
  <th>Fecha Empadronado:</th>  
	<td> <%=  v.date_select :registration_date %> </td>
  </tr>
  
  <th>Padrón:</th>  
	<td> <%=  v.text_field :registration_number %> </td>
  </tr>
  
  <th>Fecha de Ingreso:</th>  
	<td> <%=  v.date_select :date_of_entry %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= v.submit "Guardar" %>
  </td>
  </tr>
  </table>  
<% end %>


