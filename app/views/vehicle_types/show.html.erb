<H1> Tipo de Vehículo </H1>

<table class="tabla_campos_lectura" cellpadding=0 cellspacing=0>
  <tr>
  <th>Descripción:</th>
  <td><%= @vehicle_type.description %></td>
  </tr>
   <tr>
  <th>Acoplable:</th>
  <% if @vehicle_type.coupling_support == 1 %>
  <td>Sí</td>
  <% else %>
  <td>No</td>
   <% end %>
  </tr>
  <% if @vehicle_type.couples_to_type %>
  <tr>
  <th>Se acopla a:</th>
  <td> <%= @vehicle_type.couples_to_type.description %> </td>
  </tr>
   <% end %>
  <tr>
     <th>Tipos Acoplados: </th>
  <td> <%= @vehicle_type.couplable_types.map {|ct| ct.description}.join (";  ") %></td>
  </tr>
  
</table>
 
 
 
<div class="links_form"><%= link_to 'Atrás', vehicle_types_path %></div>