
  
<%= form_for @vehicle_type do |v| %>
 <% if @vehicle_type.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@vehicle_type.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @vehicle_type.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Descripción:</th>
  <td> <%= v.text_field :description %> </td>
  </tr>
    
  <tr>
    <th>Es Acoplado:</th>
    <td> <%= v.select :coupling_support, [['Si', 1], ['No', 0]] %>  </td>
  </tr>
  
  <tr>
    <th>Se acopla a:</th>
    <td> <%= v.collection_select :couples_to_type_id, VehicleType.all, :id, :description, { include_blank: true } %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= v.submit "Guardar" %>
  </td>
  </tr>
  
  </table>

  
<% end %>


