  
<%= form_for @measure_unit do |m| %>
 <% if @measure_unit.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@measure_unit.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @measure_unit.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Nombre:</th>
  <td>  <%= m.text_field :name %> </td>
  </tr>
    
  <tr>
    <th> Símbolo: </th>
    <td> <%= m.text_field :symbol %> </td>
  </tr>
  <tr><td colspan=2 class="acciones_form">
  <%= m.submit "Guardar" %>
  </td>
  </tr>
  </table>
  
<% end %>


