  
<%= form_for @employee do |e| %>
 <% if @employee.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@employee.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
    
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Empresa:</th>
  <td> <%= e.collection_select :company_id, Company.all,  :id, :company_name %> </td>
  </tr>
  
  <tr>
  <th>Nombre:</th>
  <td> <%= e.text_field :first_name %> </td>
  </tr>
  
  <tr>
  <th>Apellido:</th>
  <td>  <%= e.text_field :last_name %> </td>
  </tr>
  
  
  <tr>
  <th>Nro Documento:</th>
  <td>  <%= e.text_field :personal_id %> </td>
  </tr>
  
  
  <tr>
  <th>Tipo Documento:</th>
  <td><%= e.text_field :personal_id_type %></td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= e.submit "Crear" %>
  </td>
  </tr>
  </table>
 
  
<% end %>


