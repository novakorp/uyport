<h1>Listado de Departamentos</h1>

 <%= link_to 'Nuevo Departamento', new_state_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Nombre</th>
    <th>País</th>  
	<th></th>
  </tr>
 
  <% @states.each do |state| %>
     <tr class="tabla_listado_fila_contenido">
      <td><%= state.name %></td>
      <td><%= state.country %></td>
 	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), state %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_state_path(state) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), state_path(state), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
    </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>