  
<%= form_for @state do |a| %>
 <% if @state.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@state.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @state.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Nombre:</th>
  <td> <%= a.text_field :name %> </td>
  </tr>
    
  <tr>
    <th> País: </th>
    <td> <%=  a.text_field  :country  %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= a.submit "Guardar" %>
  </td>
  </tr>
  </table>  
<% end %>


