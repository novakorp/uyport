<h1>Listado de Cuentas</h1>

 <%= link_to 'Nueva Cuenta', new_account_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Nro Cuenta</th>
    <th>Cliente</th> 
	<th>Descripcion</th> 	
	<th></th>
  </tr>
 
  <% @accounts.each do |account| %>
     <tr class="tabla_listado_fila_contenido">
      <td><%= account.account_number %></td>
      <td><%= account.customer.name %></td>	  
      <td><%= account.description %></td>
	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), account %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_account_path(account) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), account_path(account), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
   </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>