  
<%= form_for @account do |a| %>
 <% if @account.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@account.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @account.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  
    
	
  <tr>
  <th>Nro Cuenta:</th>
  <td> <%= a.text_field :account_number%> </td>
  </tr>
    
  <tr>
    <th> Cliente: </th>
    <td> <%= a.collection_select :customer_id, Customer.all, :id, :name %> </td>
  </tr>
  
  <tr>
  <th>Descripción:</th>
  <td> <%= a.text_field :description %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= a.submit "Guardar" %>
  </td>
  </tr>
  </table>  
<% end %>


