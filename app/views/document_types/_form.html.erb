  
<%= form_for @document_type do |c| %>
 <% if @document_type.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@document_type.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @document_type.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Descripción:</th>
  <td>  <%= c.text_field :description %> </td>
  </tr>
    
  
  <tr><td colspan=2 class="acciones_form">
  <%= c.submit "Guardar" %>
  </td>
  </tr>
  </table>
  
<% end %>


