
<%= form_for @trip do |t| %>
 <% if @trip.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@trip.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @trip.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Desde:</th>
  <td>  <%= collection_select(:trip, :from_location_id, Location.all, :id, :name) %> </td>
  </tr>
    
  <tr>
    <th> Hacia: </th>
    <td>   <%= collection_select(:trip, :to_location_id, Location.all, :id, :name) %> </td>
  </tr>
  
  <tr>
    <th> Distancia: </th>
    <td>  <%= t.text_field :distance %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= t.submit "Guardar" %>
  </td>
  </tr>
  </table>
 
<% end %>


