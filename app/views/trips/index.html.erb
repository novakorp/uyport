<h1>Listado de Recorridos</h1>

 <%= link_to 'Nuevo Recorrido', new_trip_path %> 
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
   <th>Desde</th>
    <th>Hacia</th>
    <th>Distancia</th> 	
	<th></th>
  </tr>
 
  <% @trips.each do |trip| %>
    <tr class="tabla_listado_fila_contenido">
     <td><%= trip.from_location.name %></td>
      <td><%= trip.to_location.name %></td>
	  <td><%= trip.distance %></td>  
 	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), trip %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_trip_path(trip) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), trip_path(trip), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
    </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver al Menú Principal', "welcome/index" %></div>
 
 