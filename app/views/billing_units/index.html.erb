<h1>Listado de Unidades de Facturación</h1>

 <%= link_to 'Nueva Unidad de Facturación', new_billing_unit_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Descripción</th>
    <th>Código</th> 
	<th></th>
  </tr>
 
  <% @billing_units.each do |billing_unit| %>
    <tr class="tabla_listado_fila_contenido">
      <td><%= billing_unit.description %></td>
      <td><%= billing_unit.code %></td>
  	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), billing_unit %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_billing_unit_path(billing_unit) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), billing_unit_path(billing_unit), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
	
    </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>