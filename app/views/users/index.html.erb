<h1>Listado de Usuarios</h1>

 <%= link_to 'Nuevo Usuario', new_user_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
   <th>Nombre</th>
    <th>E-mail</th>
	<th></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr class="tabla_listado_fila_contenido">
     <td><%= user.name %></td>
      <td><%= user.email %></td>  
	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), user %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_user_path(user) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), user_path(user), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
     </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>
 
 