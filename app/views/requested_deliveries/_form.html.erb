  
<%= form_for ([@requested_cargo, @requested_delivery])  do |r| %>
 <% if @requested_delivery.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@requested_delivery.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @requested_delivery.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>   
  <th>Cantidad:</th>  
	<td> <%=  r.text_field :ammount %> </td>
  </tr>
    <tr> 
  <th>Dirección de Carga:</th>  
	<td> <%=  r.collection_select :address_id, @requested_cargo.shipping_request.account.customer.addresses,  :id, :description %> </td>
  </tr>
  <th>Comentarios:</th>  
	<td> <%=  r.text_field :comments %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= r.submit "Guardar" %>
  </td>
  </tr>
  </table>  
<% end %>


