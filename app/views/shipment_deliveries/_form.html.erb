  
<%= form_for @shipment_delivery do |f| %>
 <% if @shipment_delivery.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipment_delivery.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @shipment_delivery.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Material:</th>
  <td>  <%= @shipment_delivery.requested_delivery.requested_cargo.description %> </td>
  </tr>
  
  <tr>
  <th>Cantidad:</th>
  <td>  <%= f.text_field :ammount %>  <%= @shipment_delivery.requested_delivery.requested_cargo.measure_unit.symbol %> </td>
  </tr>
   
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit "Guardar" %>
  </td>
  </tr>
  </table>
  
<% end %>


