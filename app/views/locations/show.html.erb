<H1> Ubicación </H1>

<table class="tabla_campos_lectura" cellpadding=0 cellspacing=0>
  <tr>
  <th>Nombre:</th>
  <td>  <%= @location.name %></td>
  </tr>
  <tr>
  <th>Departamento:</th>
  <td> <%= @location.state.name %> </td>
  </tr>
   <tr>
  <th>Longitud:</th>
  <td> <%= @location.longitude %> </td>
  </tr>
  <th>Latitud:</th>
  <td> <%= @location.latitude %> </td>
  </tr>
   <tr>
  <th>Tipo:</th>
  <td> <% if @location.location_type == 1 %>Ciudad<% else %>Lugar<% end %> </td>
 </tr> 
</table>

<div class="links_form"><%= link_to 'Atrás', locations_path %></div>
