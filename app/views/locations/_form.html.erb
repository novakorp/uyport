
<%= form_for @location do |d| %>
 <% if @location.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@location.errors.count, "error") %> impiden guardar la Ubicación:</h2>
    <ul>
    <% @location.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <p>
    <%= d.label :nombre %>: 
    <%= d.text_field :name %>
  </p>
 
  <p>
    <%= d.label :coordenadas %>: 
    <%= d.text_field :coords %>
  </p>
 
  <p>
    <%= d.submit %>
  </p>
  
<% end %>


