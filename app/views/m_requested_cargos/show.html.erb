<H1>Carga de Modelo de Viaje</H1>

<table class="tabla_campos_lectura" cellpadding=0 cellspacing=0>
  <tr>   
  <th>Tipo de Carga:</th>  
	<td> <%=  @m_requested_cargo.cargo_type.description %> </td>
  </tr>
  <tr>
   <th>Cantidad:</th>  
	<td> <%=  @m_requested_cargo.ammount %> <%=  @m_requested_cargo.measure_unit.symbol %>  </td>
  </tr>
   
</table>


<div class="links_form"><%= link_to 'Ingresar Indicacion de Carga', new_m_requested_cargo_m_requested_supply_path(@m_requested_cargo) %></div>
 
<%= render @m_requested_cargo.m_requested_supplies %>
 
<div class="links_form"><%= link_to 'Ingresar Indicacion de Entrega', new_m_requested_cargo_m_requested_delivery_path(@m_requested_cargo) %></div>
 
<%= render @m_requested_cargo.m_requested_deliveries %>


<div class="links_form"><%= link_to 'Atrás', m_shipping_request_path(@m_shipping_request) %></div>

