<h2>Listado de Vehículos</h2>

 <%= link_to 'Nuevo Vehículo', new_vehicle_path %>
<table>
  <tr>
    <th>Marca</th>
    <th>Modelo</th> 
	<th>Matrícula</th>
	<th>Comentarios</th>
  </tr>
 
  <% @vehicles.each do |vehicle| %>
    <tr>
      <td><%= vehicle.brand %></td>
      <td><%= vehicle.model %></td>
      <td><%= vehicle.number_plate %></td>
      <td><%= vehicle.comments %></td>
	  <td><%= link_to 'Ver', vehicle %></td>
	  <td><%= link_to 'Editar', edit_vehicle_path(vehicle) %></td>
	  <td><%= link_to 'Eliminar', vehicle_path(vehicle),
                    method: :delete, data: { confirm: '¿Está seguro?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Principal', "welcome/index" %>