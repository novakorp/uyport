  
<%= form_for @vehicle do |f| %>

  <% if @vehicle.errors.any? %>
  <div id="error_explanation" class="form_errors">
    <h2> <%= t :error_header %> </h2>
    <ul>
    <% @vehicle.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
    <th><%= f.label :company_id %></th>
    <td> <%= f.collection_select :company_id, Company.all,  :id, :company_name %>  </td>
  </tr>
  
   <tr>
    <th><%= f.label :vehicle_type_id %></th>
    <td> <%= f.collection_select :vehicle_type_id, VehicleType.all,  :id, :description %>  </td>
  </tr>
  
   <tr>
    <th><%= f.label :vehicle_brand_id %></th>
    <td> <%= f.collection_select :vehicle_brand_id, VehicleBrand.all,  :id, :name, :prompt => true %>  </td>
  </tr>
    
  <tr>
    <th><%= f.label :model %></th>
    <td> <%= f.text_field :model%></td>
  </tr>
  
  <tr>    
    <th><%= f.label :number_plate %></th>
    <td> <%= f.text_field :number_plate%></td>
  </tr>
  
   <tr>    
    <th> <%= f.label :comments %></th>
    <td> <%= f.text_area :comments %></td>
  </tr>
    
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit t(:save) %>
  </td>
  </tr>
  </table>
  
<% end %>


