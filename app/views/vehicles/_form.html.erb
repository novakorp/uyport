  
<%= form_for @vehicle do |v| %>
 <% if @vehicle.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@vehicle.errors.count, "error") %> impiden guardar el vehículo:</h2>
    <ul>
    <% @vehicle.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
    <th>Empresa:</th>
    <td> <%= v.collection_select :company_id, Company.all,  :id, :company_name %>  </td>
  </tr>
  
   <tr>
    <th>Tipo de Vehículo:</th>
    <td> <%= v.collection_select :vehicle_type_id, VehicleType.all,  :id, :description %>  </td>
  </tr>
  
  <tr>
  <th>Marca:</th>
  <td>  <%= v.text_field :brand %> </td>
  </tr>
    
  <tr>
    <th> Modelo: </th>
    <td> <%= v.text_field :model %></td>
  </tr>
  
  <tr>    
    <th> Matrícula: </th>
    <td> <%= v.text_field :number_plate %></td>
  </tr>
  
   <tr>    
    <th> Comentarios: </th>
    <td> <%= v.text_area :comments %></td>
  </tr>
    
  <tr><td colspan=2 class="acciones_form">
  <%= v.submit "Guardar" %>
  </td>
  </tr>
  </table>
  
<% end %>


